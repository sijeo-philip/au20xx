/** @file hal_spi_ucsi.h
 *  @brief This module is used to initialize read and write using SPI peripheral
 *
 *  This is the header file for the definition of SPI initializing and SPI operations
 */

#ifndef HAL_SPI_UCSI_H_
#define HAL_SPI_UCSI_H_

/******************************************************************************
* Includes
*******************************************************************************/
#include "usci_spi_config.h"
#include "msp430.h"

/******************************************************************************
* Preprocessor Constants
*******************************************************************************/

#define SPI_RX_BUF		UC##CONF_UCSI_SPI##RXBUF
#define SPI_TX_BUF		UC##CONF_UCSI_SPI##TXBUF

/******************************************************************************
* Configuration Constants
*******************************************************************************/


/******************************************************************************
* Macros
*******************************************************************************/
#define CHECK_SPI_BUSY() ((UC##CONF_UCSI_SPI##STATW & 0x0001)?1:0)

#define CHECK_SPI_OVERRUN() ((UC##CONF_UCSI_SPI##STATW & 0x0020)?1:0)

#define CHECK_SPI_FRAME_ERR() ((UC##CONF_UCSI_SPI##STATW & 0x0040)?1:0)

#define SPI_RX_INT_FLAG()   ((UC##CONF_UCSI_SPI##IFG & 0x0001)?1:0)

#define SPI_TX_INT_FLAG()   ((UC##CONF_UCSI_SPI##IFG & 0x0002)?1:0)

#define SPI_IV_REG()	(UC##CONF_UCSI_SPI##IV)


/******************************************************************************
* Typedefs
*******************************************************************************/


/******************************************************************************
* Variables
*******************************************************************************/


/******************************************************************************
* Function Prototypes
*******************************************************************************/
#ifdef __cplusplus
extern "C"{
#endif

void Function(void);

#ifdef __cplusplus
} // extern "C"
#endif

//TODO: UPDATE COMMENT BELOW
#endif /*HAL_SPI_UCSI_H_*/

/*** End of File **************************************************************/
